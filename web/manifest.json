{
  "name": "Pomeranian",
  "version": "1.1.5",
  "manifest_version": 2,
    
  "description": "A simple pomodoro timer for Chrome.",
  
  "icons": { "16": "icon_16.png",
             "32": "icon_32.png",
             "48": "icon_48.png",
             "64": "icon_64.png",
            "128": "icon_128.png" },
  
  "app": {
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  },
  
  "permissions": [
    "app.window",
    "app.window.alwaysOnTop",
    "alarms",
    "notifications",
    "storage"
  ],
  "offline_enabled": true
}
